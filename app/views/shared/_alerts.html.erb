<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "DroplabApp Alert", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "DroplabApp Error", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "DroplabApp Notification", sticky: false) %>
<% end %>

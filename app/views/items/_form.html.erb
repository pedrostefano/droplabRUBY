<%= form_for [@inventory, @item], class: "form-horizontal" do |f| %>

  <% if @item.errors.any? %>
    <% @item.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Droplab", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :quantity, class: "col-sm-2 control-label" %>
    <%= f.number_field :quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :inventory, class: "col-sm-2 control-label" %>
    <%= f.collection_select :inventory_id, Inventory.inventories_by(current_user).order(:name),:id,:name, include_blank: true , class: "form-control"%>
  </div>

  <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>

<% end %>
